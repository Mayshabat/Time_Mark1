<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- במצב לחיצה -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D1E3FF" /> <!-- רקע בלחיצה -->
            <stroke android:width="2dp" android:color="#1733CE" /> <!-- מסגרת כהה -->
            <corners android:radius="24dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>

    <!-- מצב רגיל -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EAF2FF" /> <!-- רקע רגיל תכלת בהיר -->
            <stroke android:width="2dp" android:color="#1733CE" /> <!-- מסגרת כהה -->
            <corners android:radius="24dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</selector>
