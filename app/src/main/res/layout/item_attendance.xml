<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/attendance_item_background"
    android:elevation="3dp"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="12dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="may"
        android:textSize="10sp"
        android:textColor="#0A3E7B"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="05/06"
        android:textSize="10sp"
        android:textColor="#0A3E7B"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_check_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="08:00"
        android:textSize="10sp"
        android:textColor="#009688"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_check_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="17:00"
        android:textSize="10sp"
        android:textColor="#E91E63"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="09:00"
        android:textSize="10sp"
        android:textColor="#00796B"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/item_check_in_location_button"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:src="@drawable/ic_location_in"
        android:background="@android:color/transparent"
        android:contentDescription="מיקום כניסה"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/item_check_out_location_button"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:src="@drawable/ic_location_out"
        android:contentDescription="מיקום יציאה"
        android:background="@android:color/transparent"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/item_comment_button"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:src="@drawable/ic_comment"
        android:contentDescription="הצג הערה"
        android:background="@android:color/transparent"
        android:scaleType="centerInside" />
</LinearLayout>
